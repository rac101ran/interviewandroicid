<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilewall"
    tools:context=".Taskactivity">

    <EditText
        android:id="@+id/headid"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/profilefields"
        android:ems="10"
        android:textAlignment="center"
        android:hint="HEADING"
        android:inputType="textPersonName"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />


    <EditText
        android:id="@+id/descid"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/profilefields"
        android:ems="10"
        android:hint="DESCRIPTION"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <Button
        android:id="@+id/sendtask"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/rippleprofile"
        android:text="APPLY CHANGES"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/fontone"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

</androidx.constraintlayout.widget.ConstraintLayout>